{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"lib": ["ES2022", "WebWorker", "DOM.Iterable"],
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": "./src",
		"paths": {
			"@/*": ["./*"],
			"@gateway/*": ["./lib/*"]
		},
		"skipLibCheck": true,
		"types": ["@cloudflare/workers-types"]
	},
	"include": ["./src"],
	"exclude": ["node_modules", "dist"]
}
